<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="dependancies\project_files\main.c" />
    <None Remove="dependancies\project_files\startup.S" />
    <None Remove="PIC_H\p32mz2048efh064.h" />
    <None Remove="PIC_H\p32mz2048efh100.h" />
    <None Remove="PIC_H\p32mz2048efh124.h" />
    <None Remove="PIC_H\p32mz2048efh144.h" />
    <None Remove="XML\atdf\PIC32MZ2048EFH064.atdf" />
    <None Remove="XML\atdf\PIC32MZ2048EFH100.atdf" />
    <None Remove="XML\atdf\PIC32MZ2048EFH124.atdf" />
    <None Remove="XML\atdf\PIC32MZ2048EFH144.atdf" />
    <None Remove="XML\edc\PIC32MZ2048EFH064.PIC" />
    <None Remove="XML\edc\PIC32MZ2048EFH100.PIC" />
    <None Remove="XML\edc\PIC32MZ2048EFH124.PIC" />
    <None Remove="XML\edc\PIC32MZ2048EFH144.PIC" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="dependancies\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Remove="dependancies\Highlighting\asm.xshd" />
    <Content Remove="dependancies\Highlighting\makefile.xshd" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="dependancies\Highlighting\makefile.xshd">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="dependancies\Highlighting\asm.xshd">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>


  <ItemGroup>
    <Folder Include="dependancies\modules\" />
    <Folder Include="dependancies\gpio\" />
    <Folder Include="dependancies\datasheets\" />
    <Folder Include="dependancies\templates\" />
    <Folder Include="interfaces\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AvalonEdit" Version="6.3.1.120" />
    <PackageReference Include="Microsoft-WindowsAPICodePack-Core" Version="1.1.5" />
    <PackageReference Include="Microsoft-WindowsAPICodePack-Shell" Version="1.1.5" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="AppSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>AppSettings.settings</DependentUpon>
    </Compile>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="AppSettings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>AppSettings.Designer.cs</LastGenOutput>
    </None>
    <None Update="dependancies\makefiles\Makefile_Root">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="dependancies\makefiles\Makefile_Srcs">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>